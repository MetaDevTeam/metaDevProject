@model List<Blog.Models.Recipe>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            @Html.ActionLink(@recipe.Title, "Details", "Recipe", new { @id = recipe.Id }, null)
                        </h2>
                    </header>
                    <p>
                        @recipe.Content
                    </p>
                    <div class="pull-left">
                        @foreach (var recipeTag in recipe.RecipeTags)
                        {
                            @Html.ActionLink(recipeTag.Name, "ListRecipesByTag", "RecipeTag", new { @id = recipeTag.Id }, new { @class = "btn btn-default btn-xs" })
                        }
                    </div>
                    <small class="author pull-right">
                        --author @recipe.Author.FullName
                    </small>
                </article>
            </div>
        }
    </div>
</div>
<hr />