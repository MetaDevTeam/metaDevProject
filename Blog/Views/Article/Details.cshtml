@model Blog.Models.Article

@{
    ViewBag.Title = "Details";
}

<div class="content">
    <div class="inner">
        <div class="article-wrapper">
            <article>
                <small class="author">
                    <span>by</span> @Model.Author.FullName
                </small>
                <h2>
                    @Model.Title
                </h2>
                <p>
                    @Model.Content
                </p>
                <ul class="tags">
                    @foreach (var tag in Model.Tags)
                    {
                        <li>
                            @Html.ActionLink(tag.Name, "ListArticlesByTag", "Tag", new { @id = tag.Id }, new { @class = "tag tag-article" })
                        </li>
                    }
                </ul>
                <footer class="pull-right">
                    @if (User.IsInRole("Admin") || Model.IsAuthor(User.Identity.Name))
            {
                        @Html.ActionLink("Edit", "Edit", "Article", new { @id = Model.Id }, new { @class = "button" })
                        @Html.ActionLink("Delete", "Delete", "Article", new { @id = Model.Id }, new { @class = "button" })
                    }
                    @Html.ActionLink("Back", "Index", "Article", null, new { @class = "btn btn-default btn-xs" })
                </footer>
            </article>
        </div>
    </div>
</div>
