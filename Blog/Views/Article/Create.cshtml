@model Blog.Models.ArticleViewModel

@{
    ViewBag.Title = "Create Article";
}

<div class="content">
    <div class="inner">
        @using (Html.BeginForm("Create", "Article", FormMethod.Post, new { @class = "compact" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <h3>@ViewBag.Title</h3>
            <p class="input">
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title)
            </p>
            <p class="input">
                @Html.LabelFor(m => m.Content)
                @Html.TextAreaFor(m => m.Content)
            </p>

            <p class="input">
                @Html.LabelFor(m => m.CategoryId)
                @Html.DropDownListFor(m => m.CategoryId,
            new SelectList(Model.Categories, "Id", "Name"),
            new { @class = "button" })
            </p>

            <p class="input">
                @Html.LabelFor(m => m.Tags)
                @Html.TextBoxFor(m => m.Tags)
            </p>
            <div class="buttons">
                    @Html.ActionLink("Cancel", "Index", "Article", null, new { @class = "button" })
                    <input type="submit" value="Create" class="button" />
            </div>
        }
    </div>
</div>

