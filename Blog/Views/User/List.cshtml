@model List<Blog.Models.ApplicationUser>

@{
    ViewBag.Title = "List";
}

<div class="content">
    <div class="inner">
        <div class="categories-create">
            <h2>Users</h2>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="table-th-users">ID</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        if (ViewBag.Admins.Contains(user.UserName))
                        {
                            @:<tr class="info">
                    }
                        else
                        {
                            @:<tr>
                    }

                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>
                            <div class="buttons">
                                @Html.ActionLink("Edit", "Edit", "User", new { @id = user.Id }, new { @class="button"})
                                @Html.ActionLink("Delete", "Delete", "User", new { @id = user.Id }, new { @class = "button" })
                            </div>
                        </td>
                    }
            </tbody>
        </table>
    </div>
    </div>
</div>
